<?xml version="1.0" encoding="utf-8"?>
<animated-rotate
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:pivotX="50%"
    android:pivotY="50%" >

    <shape
        android:innerRadiusRatio="4"
        android:shape="ring"
        android:thicknessRatio="5.333"
        android:useLevel="false" >
        <size
            android:height="24dp"
            android:width="24dp" />

        <gradient
            android:centerColor="#88FF5722"
            android:centerY="0.50"
            android:endColor="#ffFF5722"
            android:startColor="#00FF5722"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</animated-rotate>

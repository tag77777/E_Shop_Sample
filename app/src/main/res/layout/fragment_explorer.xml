<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.explorerfragment.ExplorerFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/baseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible"
        >

        <TextView
            android:id="@+id/cityTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:textSize="15sp"
            android:contentDescription="@string/city"

            android:layout_marginTop="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <ImageView
            android:id="@+id/cityGpsIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/city"
            app:srcCompat="@drawable/ic_gps"
            android:layout_marginEnd="8dp"

            app:layout_constraintEnd_toStartOf="@id/cityTextView"
            app:layout_constraintBottom_toBottomOf="@id/cityTextView"
            />

        <ImageView
            android:id="@+id/cityDropdownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_dropdown"

            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"

            app:layout_constraintStart_toEndOf="@id/cityTextView"
            app:layout_constraintTop_toTopOf="@id/cityTextView"
            android:contentDescription="@string/city" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/categoryTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabContentStart="8dp"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"

            android:layout_marginTop="32dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cityTextView"
            >

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/categories_item" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/categories_item" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/categories_item" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/categories_item" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/categories_item" />
        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:id="@+id/selectCategoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_category"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_marginStart="8dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/categoryTabLayout"
            />

        <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
            android:id="@+id/hotSaleCarousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categoryTabLayout"
            tools:listitem="@layout/hot_sale_item"
            />

        <TextView
            android:id="@+id/hotSaleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hot_sales"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"

            android:layout_marginBottom="2dp"

            app:layout_constraintStart_toStartOf="@id/hotSaleCarousel"
            app:layout_constraintBottom_toTopOf="@id/hotSaleCarousel"
            />

        <TextView
            android:id="@+id/seeMoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_more"

            app:layout_constraintEnd_toEndOf="@id/hotSaleCarousel"
            app:layout_constraintBottom_toBottomOf="@id/hotSaleTV"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bestsellerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hotSaleCarousel"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/bestseller_item"
            />


        <TextView
            android:id="@+id/bestsellerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_seller"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"

            android:layout_marginBottom="2dp"

            app:layout_constraintStart_toStartOf="@id/hotSaleTV"
            app:layout_constraintBottom_toTopOf="@id/bestsellerRecyclerView"
            />

        <TextView
            android:id="@+id/seeMoreBestsellerTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_more"

            app:layout_constraintBottom_toBottomOf="@id/bestsellerTV"
            app:layout_constraintEnd_toEndOf="@id/seeMoreTV"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/loadStateView"
        layout="@layout/load_state_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        />

</FrameLayout>

